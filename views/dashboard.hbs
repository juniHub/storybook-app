<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>

{{#condition success.length ">" 0}}

<div class="materialert success">
    <div class="material-icons"><i class="fa fa-check"></i></div>
    <span>{{success}}</span>
    <button type="button" class="close-alert">Ã—</button>
</div>

{{/condition}}


{{#if stories}}
<table class="centered highlight">
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a class="highlighted" href="/stories/{{_id}}"><strong>{{title}}</strong></a></td>

            <td><img width="80" height="80" src="{{image}}" class="responsive-img" alt="image"></td>

            <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/stories/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/stories/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}