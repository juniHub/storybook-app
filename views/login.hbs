<div class="login-container" id="login">



    <h3><a href="#stories" class="login-title"><img width="100" height="100" src="/assets/logo.png" alt="logo-img"
                class="responsive-img circle"> Welcome to juniHUB</a></h3>
    <div class="section">

        <h4><strong><i class="fas fa-quote-left"></i>&nbsp;{{quote}}</strong></h5>
            <h6>-{{author}}</h6>

            <p class="lead"><em>People have their own story, what about you?</em></p>

    </div>

    <div class="section">
        <div class="card-action">
            <a href="/auth/google" class="btn">
                <i class="fab fa-google left"></i>LOG IN WITH GOOGLE </a>
        </div>

        <div class="card-image">
            <img src="/assets/login.svg" class="responsive-img medium-img">
        </div>

    </div>
</div>

<div id="stories">
    <h1>All Public Stories</h1>
    {{#if stories}}
    <div class="row">
        {{#each stories}}
        <div class="col s12 m3">
            <div class="card sticky-action">

                <div class="card-image waves-effect waves-block waves-light">
                    <a class="highlighted" href="#login">
                        <img class="dashboard-img" src="{{image}}" alt="story-image">
                    </a>

                </div>

                <div class="card-content center-align">
                    <span class="card-title activator grey-text text-darken-4"><a class="highlighted"
                            href="#login"><strong>{{title}}</strong></a><i
                            class="material-icons right">more_vert</i></span>

                    <p class="chip">{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</p>
                    <br>

                </div>


                <div class="card-action center-align">

                    <a href="#login" class="btn">
                        <i class="fas fa-user-lock left"></i>Login to View More </a>


                </div>


                <div class="card-reveal post-body">
                    <span class="card-title grey-text text-darken-4"><a class="highlighted"
                            href="#login"><strong>{{title}}</strong></a>
                        <i class="material-icons right">close</i>

                    </span>
                    <p>{{stripTags (truncate body 150)}} </p>

                </div>

            </div>

        </div>
        {{/each}}
    </div>
    {{else}}
    <p>You have not created any stories</p>
    {{/if}}

</div>