<div class="row">
    <div class="col s12 m9">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <p>{{{story.body}}}</p>
            </div>

            <div class="card-content">
                <span class="card-title">Your Photo of Day</span>
                <img src="{{story.image}}" class="responsive-img img-medium" alt="image">
            </div>


        </div>
    </div>
    <div class="col s12 m3">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}"><strong>More From {{story.user.firstName}}</strong></a>
            </div>
        </div>
    </div>
</div>